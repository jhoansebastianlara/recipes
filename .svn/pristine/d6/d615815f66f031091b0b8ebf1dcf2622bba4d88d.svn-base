<ion-view class="post-view" view-title="">
  <ion-nav-title>
    <span>{{ recipe[defaultLang].title }}</span>
  </ion-nav-title>
  <ion-content>
    <div class="post-heading item item-text-wrap">
      <h1 class="post-title">{{ recipe[defaultLang].title }}</h1>
      <p class="post-author">
        {{ recipe[defaultLang].subtitle }}
      </p>
    </div>
    <div class="post-content item item-text-wrap">
      <p class="post-excerpt ng-binding">
        <img ng-src="{{ recipe[defaultLang].image }}" width="100%" />
        <p style="text-align: justify;">{{ recipe[defaultLang].description }}</p>
      </p>
    </div>
    <div class="card">
      <div class="item item-divider">
        {{ 'NEW_RECIPE_OPT.CONFIG.INGREDIENTS' | translate }} ({{ lodash.size(recipe[defaultLang].ingredients) }})
      </div>
      <div class="item item-text-wrap" ng-repeat="ingredient in recipe[defaultLang].ingredients">
        {{ ingredient.name }}
      </div>
    </div>

    <div style="margin-top: -20px;">
        <ion-slide-box show-pager="true">
              <ion-slide ng-repeat="step in recipe[defaultLang].steps">
                  <div class="list card">
                      <div class="item item-divider">{{ step.title }} | {{ ($index + 1) }}/{{ lodash.size(recipe[defaultLang].steps) }}</div>
                      <div class="item item-image">
                          <img ng-src="{{ step.image }}" width="100%" />
                      </div>
                      <div class="item item-body">
                          <p>{{ step.description }}</p>
                      </div>
                  </div>
              </ion-slide>
          </ion-slide-box>
    </div>
  </ion-content>
  <!-- <ion-footer-bar class="post-footer bar bar-footer bar-dark">
    <div class="row">
      <div class="col col-25 col-offset-25 col-center">
        <center><a class="button button-icon icon ion-heart"></a></center>
      </div>
      <div class="col col-25 col-center">
        <center><a class="button button-icon icon ion-android-share-alt"></a></center>
      </div>
    </div>
  </ion-footer-bar> -->
</ion-view>
